extends ../default

block content

	#home.page

		ul.tags

			li: a(href="#") All

			each item in tags

				li: a(href="#" data-tag="#{item.slug}") #{item.tag}

		div.post
			div.video
				iframe(src="" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen)
			h1.title
			p.description
			p.extra-bits

		ul.posts

			each item in work

				- var tags = [];
				
				each tag in item.tags

					- tags.push(tag.slug);

				- var tags = tags.join().replace(/,/g, ' ');

				li(data-tags="#{tags}")
					
					a(id="#{item.id}" href="#{item.slug}")

						img(
							src="images/uploads/#{item.stillImage.filename}"
							data-over="#{item.gif.filename}"
							data-out="#{item.stillImage.filename}"
						)
