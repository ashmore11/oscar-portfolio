#home
	position: relative
	max-width: 772px
	margin: 0 auto
	
	.tags
		text-align: center
		
		li
			display: inline-block
			margin: 10px 5px 20px 5px
			cursor: pointer
			
	.post
		position: relative
		height: 0
		overflow: hidden
		text-align: center
		margin-top: 2px
			
		.video
			width: 100%
			
			iframe
				width: 100%
				height: 430px
				
		.title
			font-size: 12px
			margin: 10px 0
			
		.description
			margin: 0 auto 10px
			width: 80%
		
		.extra-bits
			margin-bottom: 20px
		
	.posts
		text-align: center
		margin-top: 10px
		
		li
			display: inline-block
			transform: translateY(-30px)
			opacity: 0
			transition: -webkit-filter 1s $ease-out-quart, box-shadow 1s $ease-out-quart
			cursor: pointer
			size(115px,100%)
			column(1/6, gutter: 2)
				
			+mobile()
				column(1/2, gutter: 2)
			
			img
				display: block
				size(100%,100%)	
			
			&.blur
				-webkit-filter: blur(2px)
				        filter: blur(2px)
				        
			&.active
				box-shadow: 0px 0px 15px 2px rgba($black, 0.2)


