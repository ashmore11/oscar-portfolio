#home
	position: relative
	max-width: 772px
	margin: 0 auto
	
	.tags
		relative: left 50%
		transform: translateX(-50%)
		display: inline-block
		margin: 0 auto 20px auto
		
		li
			display: inline-block
			margin: 0 5px
			cursor: pointer
			transition: opacity 0.25s
			
			&:hover
				text-decoration: underline
	
	.loader
		height: 1px
		width: 0
		background-color: $black

	.post
		position: relative
		height: 0
		overflow: hidden
		text-align: center
			
		.video
			width: 100%
			
			iframe
				width: 100%
				height: 430px
				
		.other-videos
			li
				display: inline-block
				margin: 10px 6px 0px
				cursor: pointer
				
				&:hover
					text-decoration: underline
				
				&:before
					content: '|'
					display: block
					float: right
					margin-right: -7px
					margin-top: -1px
					
				&:last-child
					&:before
						display: none
				
		.title
			font-size: 12px
			margin: 10px 0
			
		.description
			margin: 0 auto 10px
			width: 80%
		
		.extra-bits
			margin-bottom: 20px
		
	.posts
		text-align: center
		margin-top: 10px
		
		li
			display: inline-block
			transform: translateY(-30px)
			opacity: 0
			transition: all 1s $ease-out-quart
			cursor: pointer
			size(115px,100%)
			column(1/6, gutter: 2)
				
			+mobile()
				column(1/2, gutter: 2)
			
			img
				display: block
				size(100%,100%)	
			
			&.blur
				// -webkit-filter: blur(2px)
				//         filter: blur(2px)
				        
			&.active
				box-shadow: 0px 0px 15px 2px rgba($black, 0.3)
			
			&.open
				cursor: default


