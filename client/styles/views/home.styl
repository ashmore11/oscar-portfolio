#home
	max-width: 772px
	margin: 0 auto
	
	.tags
		text-align: center
		
		li
			display: inline-block
			margin: 10px 5px 20px 5px
			
	.post
		height: 0
		overflow: hidden
		text-align: center
		margin-top: 2px
			
		.video
			width: 100%
			
			iframe
				width: 100%
				height: 430px
				
		.title
			margin: 10px 0
			
		.description
			margin-bottom: 10px
		
		.extra-bits
			margin-bottom: 20px
		
	.posts
		text-align: center
		margin-top: 10px
		
		li
			display: inline-block
			column(1/6, gutter: 2)
			
			a
				display: block
				transform: translateY(-30px)
				opacity: 0
				transition: all 1s $ease-out-quart
				size(100%,100%)
				
				img
					display: block
					size(100%,100%)	
				
				&.blur
					-webkit-filter: blur(6px)
					        filter: blur(6px)
					        
				&.active
					box-shadow: 0px 0px 15px 2px rgba($black, 0.2)


