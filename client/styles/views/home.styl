#home
	position: relative
	max-width: 772px
	margin: 0 auto
	
	.tags
		relative: left 50%
		transform: translateX(-50%)
		display: inline-block
		margin: 0 auto 20px auto
		
		li
			display: inline-block
			margin: 0 5px
			cursor: pointer
			transition: opacity 0.25s
			
			&:hover
				text-decoration: underline
	
	.loader
		height: 1px
		width: 0
		background-color: $black
		max-width: 100%
		
	.posts
		text-align: center
		margin-top: 10px
		
		li
			display: inline-block
			transform: translateY(-25px)
			opacity: 0
			transition: box-shadow 1s $ease-out-quart
			cursor: pointer
			margin-bottom: 17px
			size(115px,100%)
			column(1/6, gutter: 2, cycle: 6)
				
			+mobile()
				column(1/2, gutter: 2, cycle: 2)
			
			img
				display: block
				size(100%,100%)
				
				&.over
					absolute: top left
					opacity: 0
				        
			&.active
				box-shadow: 0px 0px 15px 2px rgba($black, 0.3)
			
			&.open
				cursor: default


